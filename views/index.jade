extends layout/base
block banner
  #bean-hero.bean-hero(data-anchor-target="#bag-wrap", data-top-top="background-position: 0px 0px", data-bottom-top="background-position: 0px -200px")
    .lead.container
      .logo.col-sm-8.col-sm-offset-2
        img.img-responsive.center(src="/img/logo.png")

block body
  .discount.container
    .row
      .col-sm-12
        h2.text-center APSU students and staff get a 10% discount everyday!
          span.text-center.disclaimer &nbsp; (With valid ID.)

  #about-us.container.about-us
    .row
      .col-sm-12
        h1.welcome.text-center Hey There!
    .row
      .col-sm-8
        #carousel.carousel.slide(data-ride="carousel")
          ol.carousel-indicators
            li.active(data-target="#carousel", data-slide-to="0")
            li.active(data-target="#carousel", data-slide-to="1")
            li.active(data-target="#carousel", data-slide-to="2")

          .carousel-inner
            .item.active
              img.img-responsive(src="img/CDLSlideshow1.jpg")
            .item
              img.img-responsive(src="img/CDLSlideshow2.jpg")
            .item
              img.img-responsive(src="img/CDLSlideshow3.jpg")

      .col-sm-4
        h2  We <span class="glyphicon glyphicon-heart"></span> coffee.
        p.copy.
          <b>Very much so!</b> We wanted to establish a place where our customers
          could enjoy great coffee and great conversation in a great space! 

        p.copy.hidden-sm.hidden-xs
          Our sourced blends are all Organic, Fair Trade, and full of flavor! Stop by
          whenever youâ€™d like; we enjoy meeting new, friendly faces! Thank you for your
          business! 

      
    .row
      .col-sm-12
        p.text-center.caption.
          Located across the street from Austin Peay State University, Cafe de
          Light is our way of bringing an additional, local option to
          Clarksville, TN. 

  #stuff.container.stuff
    .row
      .col-sm-6
        table.table.hours
          thead
            tr
              th 
                h2 Hours
              th Open
              th Close

          tbody
            tr
              td Mon - Sat
              td 7 am
              td 11 pm

            tr
              td Sunday
              td 9 am
              td 7 pm

      .col-sm-6
        h2 We Also <span class="glyphicon glyphicon-heart"></span> Special Events!
        p.space-available. 
          Our space is available for a variety of small gatherings and events.
          Give us a call at <b> (931) 896-2690 </b> for more information.

  #location.container.location
    .row
      .col-sm-12
        h1.text-center.visit-cta Come Visit Us!
        h2.text-center.address.
          Cafe de Light &#124; 124 University Ave. &#124; Clarksville, TN 37040
        h2.text-center.phone-number
          b. (931) 896-2690 

    .row
      .col-sm-4.hidden-xs
        img.grey-border.img-responsive(src="/img/storefront.jpg")

      .col-sm-8.col-xs-12
        #gmap.gmap-container

